<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="ltr"
        tools:context="com.rahbod.pharmasina.app.ActivityErrorReport">

        <!--actionBar-->
        <RelativeLayout
            android:id="@+id/actionBarErrorReport"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/background_gradient"
            android:elevation="4dp"
            tools:targetApi="lollipop">

            <ImageView
                android:id="@+id/btnOpenNvDraw"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/background_focus"
                android:padding="13dp"
                android:src="@drawable/menu_icon" />

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/background_focus"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/back_icon" />

            <com.rahbod.pharmasina.fonts.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="گزارش خطا"
                android:textColor="@color/white"
                android:textSize="18dp" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/actionBarErrorReport"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp">

                    <com.rahbod.pharmasina.fonts.FontTextView
                        android:id="@+id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:text="متن گزارش"
                        android:textColor="@color/Gray"
                        android:textSize="14dp" />

                    <com.rahbod.pharmasina.fonts.EditTextFont
                        android:id="@+id/etReport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/txt2"
                        android:layout_alignRight="@+id/txt2"
                        android:layout_below="@+id/txt2"
                        android:background="@drawable/edit_text_border"
                        android:gravity="right"
                        android:lines="5"
                        android:textSize="13dp"
                        tools:ignore="RtlCompat,RtlHardcoded" />

                </RelativeLayout>

                <com.rahbod.pharmasina.fonts.ButtonFont
                    android:id="@+id/btnSave"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/rel2"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/shape_button_blue"
                    android:text="ثبت"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    tools:ignore="RtlHardcoded" />

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

