        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navigation_header"
        android:id="@+id/reminderListNavView"
        tools:ignore="RtlHardcoded">

        <ScrollView
