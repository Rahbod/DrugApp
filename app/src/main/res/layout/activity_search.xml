                    android:onClick="openNv"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/flag_icon" />

                    <com.example.behnam.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="گزارش خطا"
                        android:textColor="@color/sina" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_recycler_view_item"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="openNv"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/share_icon" />

                    <com.example.behnam.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="ارسال برنامه"
                        android:textColor="@color/sina" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_recycler_view_item"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="openNv"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/sina_icon" />

                    <com.example.behnam.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="درباره سینا دارو"
                        android:textColor="@color/sina" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_recycler_view_item"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="openNv"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/sina_icon" />

                    <com.example.behnam.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="ضوابط و مقررات حقوقی"
                        android:textColor="@color/sina" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
