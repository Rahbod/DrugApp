<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/relHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layoutDirection="ltr"
        tools:context="com.example.behnam.app.ActivityHome"
        tools:targetApi="jelly_bean_mr1">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.behnam.ActivityCheckTransaction"
            tools:ignore="MissingConstraints">

            <!--actionBar-->
            <RelativeLayout

                android:id="@+id/actionBar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/background_gradient"
                android:layoutDirection="ltr"
                app:layout_scrollFlags="scroll"
                tools:targetApi="jelly_bean_mr1">

                <ImageView
                    android:id="@+id/btnOpenNvDraw"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/background_focus"
                    android:padding="13dp"
                    android:src="@drawable/menu_icon" />

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/background_focus"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@drawable/back_icon" />

                <com.example.behnam.fonts.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="اطلاعات پرداخت"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

            </RelativeLayout>

            <com.example.behnam.fonts.FontTextViewBold
                android:id="@+id/txtMessageOk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/actionBar"
                android:layout_marginTop="40dp"
                android:textAlignment="center"
                android:textColor="@color/sina"
                android:textSize="15dp" />

            <com.example.behnam.fonts.ButtonFont
                android:id="@+id/back"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/txtMessageOk"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/shape_button_blue"
                android:text="بازگشت"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:visibility="invisible"
                />

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtMessageOk"
                android:layout_marginTop="20dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="10"
                tools:targetApi="jelly_bean_mr1"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.example.behnam.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="مبلغ:"
                        android:textColor="@color/sina" />

                    <com.example.behnam.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="شماره تراکنش:"
                        android:textColor="@color/sina" />

                    <com.example.behnam.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="کد رهگیری:"
                        android:textColor="@color/sina" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:orientation="vertical">

                    <com.example.behnam.fonts.FontTextViewBold
                        android:id="@+id/amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="_ _ _"
                        android:textColor="@color/sina" />

                    <com.example.behnam.fonts.FontTextViewBold
                        android:id="@+id/orderId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="_ _ _"
                        android:textColor="@color/sina" />

                    <com.example.behnam.fonts.FontTextViewBold
                        android:id="@+id/code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="_ _ _"
                        android:textColor="@color/sina" />

                </LinearLayout>

            </LinearLayout>

            <com.example.behnam.fonts.ButtonFont
                android:id="@+id/download"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/layout"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/shape_button_blue"
                android:text="دانلود اطلاعات"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:visibility="invisible"/>

        </RelativeLayout>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navigation_header"
        tools:ignore="RtlHardcoded">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="150dp"
            android:fillViewport="true"
            android:layoutDirection="rtl"
            android:scrollbars="none"
            tools:ignore="RtlHardcoded"
            tools:targetApi="jelly_bean_mr1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layoutDirection="rtl"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/item9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_recycler_view_item"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="openNv"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/sina_icon" />

                    <com.example.behnam.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="داروهای شیمیایی"
                        android:textColor="@color/sina" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_recycler_view_item"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="openNv"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/sina_icon" />

                    <com.example.behnam.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="دارو های گیاهی"
                        android:textColor="@color/sina" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_recycler_view_item"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="openNv"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/interference_icon" />

                    <com.example.behnam.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="تداخلات دارویی"
                        android:textColor="@color/sina" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_recycler_view_item"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="openNv"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/sina_icon" />

                    <com.example.behnam.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="طبقه بندی درمانی"
                        android:textColor="@color/sina" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_recycler_view_item"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="openNv"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/sina_icon" />

                    <com.example.behnam.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="طبقه بندی بیماری"
                        android:textColor="@color/sina" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_recycler_view_item"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="openNv"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/location_icon" />

                    <com.example.behnam.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="داروخانه های نزدیک"
                        android:textColor="@color/sina" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_recycler_view_item"
                    android:gravity="right"
                    android:onClick="openNv"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/clock_icon" />

                    <com.example.behnam.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="یادآور مصرف دارو"
                        android:textColor="@color/sina" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_recycler_view_item"
                    android:gravity="right"
                    android:onClick="openNv"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/star_icon" />

                    <com.example.behnam.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="سبد داروهای من"
                        android:textColor="@color/sina" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_recycler_view_item"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="openNv"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/flag_icon" />

                    <com.example.behnam.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="گزارش خطا"
                        android:textColor="@color/sina" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_recycler_view_item"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="openNv"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/share_icon" />

                    <com.example.behnam.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="ارسال برنامه"
                        android:textColor="@color/sina" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_recycler_view_item"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="openNv"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/sina_icon" />

                    <com.example.behnam.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="درباره سینا دارو"
                        android:textColor="@color/sina" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_recycler_view_item"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="openNv"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/sina_icon" />

                    <com.example.behnam.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="ضوابط و مقررات حقوقی"
                        android:textColor="@color/sina" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>