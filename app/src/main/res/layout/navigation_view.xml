<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/activity_home" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_gravity="right"
        android:layoutDirection="rtl"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.NavigationView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:fitsSystemWindows="true"
                app:headerLayout="@layout/navigation_header">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="170dp"
                    android:layoutDirection="rtl"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/item1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layoutDirection="rtl"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:onClick="openNv">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="20dp"
                            android:src="@drawable/two_opposite_arrows_icon" />

                        <com.example.behnam.fonts.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:text="بررسی تداخل دارویی"
                            android:textColor="@color/sina" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/item2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layoutDirection="rtl"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:onClick="openNv">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/location_icon" />

                        <com.example.behnam.fonts.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:text="داروخانه های نزدیک من"
                            android:textColor="@color/sina" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/item3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:onClick="openNv">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/clock_icon" />

                        <com.example.behnam.fonts.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:text="یادآور مصرف دارو"
                            android:textColor="@color/sina" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/item4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:gravity="right"
                        android:layoutDirection="rtl"
                        android:onClick="openNv">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/share_icon" />

                        <com.example.behnam.fonts.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:text="ارسال برنامه"
                            android:textColor="@color/sina" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/item5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layoutDirection="rtl"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:onClick="openNv">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/flag_icon" />

                        <com.example.behnam.fonts.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:text="گزارش خطا"
                            android:textColor="@color/sina" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/item6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:gravity="right"
                        android:layoutDirection="rtl"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:onClick="openNv">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/sina_icon" />

                        <com.example.behnam.fonts.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:text="درباره سینا دارو"
                            android:textColor="@color/sina" />
                    </LinearLayout>

                </LinearLayout>


            </android.support.design.widget.NavigationView>
        </LinearLayout>

    </ScrollView>
</android.support.v4.widget.DrawerLayout>