<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.example.behnam.fonts.FontTextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/sina"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/linDialogMassage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"
        android:visibility="invisible">

        <com.example.behnam.fonts.ButtonFont
            android:id="@+id/btnOk"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_button_blue"
            android:gravity="center"
            android:text="بله"
            android:textColor="@color/white" />

        <com.example.behnam.fonts.ButtonFont
            android:id="@+id/btnCancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_button_gray"
            android:gravity="center"
            android:text="خیر"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linReminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginTop="1dp"
        android:gravity="left"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"
        android:visibility="invisible"
        tools:ignore="RtlHardcoded">

        <com.example.behnam.fonts.ButtonFont
            android:id="@+id/Ok"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_button_blue"
            android:gravity="center"
            android:text="تایید"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>