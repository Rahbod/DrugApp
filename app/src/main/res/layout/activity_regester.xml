<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRegister">

    <com.example.behnam.fonts.EditTextFont
        android:id="@+id/numberMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="11"
        android:hint="شماره تماس"/>

    <com.example.behnam.fonts.EditTextFont
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="نام*"
        android:inputType="text"
        android:layout_below="@id/numberMobile"/>

    <com.example.behnam.fonts.EditTextFont
        android:id="@+id/field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:hint="رشته تحصیلی*"
        android:inputType="text" />

    <com.example.behnam.fonts.FontTextView
        android:id="@+id/grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/field"
        android:hint="مقطع*"
        android:inputType="text" />

    <com.example.behnam.fonts.FontTextView
        android:id="@+id/department"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/grade"
        android:text="گروه تحصیلی*"/>

    <com.example.behnam.fonts.EditTextFont
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/department"
        android:hint="ایمیل"
        android:inputType="textEmailAddress" />

    <com.example.behnam.fonts.ButtonFont
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:text="save" />

</RelativeLayout>
