<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.behnam.app.ActivityInterferenceStep3"
    android:background="@color/white">

    <!--actionBar-->
    <RelativeLayout

        android:id="@+id/actionBarInterferenceStep3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/background_gradient"
        app:layout_scrollFlags="scroll">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_icon" />

        <com.example.behnam.fonts.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="تداخل دارویی"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </RelativeLayout>

        <LinearLayout
            android:id="@+id/lindRadius"
            android:layout_below="@+id/actionBarInterferenceStep3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/radius_shape">

            <com.example.behnam.fonts.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="بررسی تداخل دارویی"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:textSize="16dp"/>

            <com.example.behnam.fonts.FontTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALMOTRIPTAN"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textSize="23dp"/>
        </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recInterferenceStep3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lindRadius"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

</RelativeLayout>
