<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.behnam.app.ActivityReminderStep2">

        <!--actionBar-->
        <RelativeLayout
            android:id="@+id/actionBarReminder"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/background_gradient">

            <RelativeLayout
                android:id="@+id/lin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layoutDirection="ltr"
                android:weightSum="10"
                tools:targetApi="jelly_bean_mr1">

                <ImageView
                    android:id="@+id/btnOpenNvDraw"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/background_focus"
                    android:padding="13dp"
                    android:src="@drawable/menu_icon" />

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:background="@drawable/background_focus"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/back_icon" />

                <com.example.behnam.fonts.FontTextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="یادآور مصرف دارو"
                    android:textColor="@color/white"
                    android:textSize="18dp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/lin"
                android:layout_marginTop="-8dp"
                android:gravity="center"
                android:weightSum="10">

                <com.example.behnam.fonts.FontTextViewBold
                    android:id="@+id/txtName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="9"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/actionBarReminder"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relHome1"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp">

                    <com.example.behnam.fonts.FontTextView
                        android:id="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:text=" شروع"
                        android:textColor="@color/Gray"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:weightSum="9"
                        android:layoutDirection="rtl"
                        tools:targetApi="jelly_bean_mr1">

                        <com.example.behnam.fonts.FontTextView
                            android:id="@+id/date_picker"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:background="@drawable/edit_text_border"
                            android:ellipsize="start"
                            android:gravity="center_horizontal"
                            android:hint="تاریخ"
                            android:textAlignment="center"
                            android:textSize="13dp" />

                        <com.example.behnam.fonts.FontTextViewBold
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:textColor="@color/sina"
                            android:textSize="21dp" />

                        <com.example.behnam.fonts.FontTextView
                            android:id="@+id/time_picker"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:background="@drawable/edit_text_border"
                            android:hint="زمان"
                            android:textAlignment="center"
                            android:textSize="13dp" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel1"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp">

                    <com.example.behnam.fonts.FontTextView
                        android:id="@+id/tv_period"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:text="دوره مصرف"
                        android:textColor="@color/Gray"
                        android:textSize="12dp" />

                    <com.example.behnam.fonts.EditTextFont
                        android:id="@+id/et_period"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_period"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_border"
                        android:gravity="right"
                        android:hint="هر چند ساعت؟"
                        android:inputType="number"
                        android:textColor="@color/sina"
                        android:textSize="13dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel2"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp">

                    <com.example.behnam.fonts.FontTextView
                        android:id="@+id/tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:text="تعداد مصرف"
                        android:textColor="@color/Gray"
                        android:textSize="12dp" />

                    <com.example.behnam.fonts.EditTextFont
                        android:id="@+id/et_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_count"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_border"
                        android:gravity="right"
                        android:inputType="number"
                        android:textColor="@color/sina"
                        android:textSize="13dp" />
                </RelativeLayout>

                <com.example.behnam.fonts.ButtonFont
                    android:id="@+id/button"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/rel3"
                    android:layout_marginBottom="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/shape_button_blue"
                    android:text="ثبت"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navigation_header"
        android:id="@+id/reminderStep2NavView"
        tools:ignore="RtlHardcoded">

        <ScrollView
            android:layout_marginTop="150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fillViewport="true"
            android:layoutDirection="rtl"
            android:scrollbars="none"
            tools:ignore="RtlHardcoded"
            tools:targetApi="jelly_bean_mr1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layoutDirection="rtl"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/item9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_recycler_view_item"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="openNv"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/drug_icon" />

                    <com.example.behnam.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="دارو های شیمیایی"
                        android:textColor="@color/sina" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_recycler_view_item"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="openNv"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/vegetal_drug" />

                    <com.example.behnam.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="دارو های گیاهی"
                        android:textColor="@color/sina" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_recycler_view_item"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="openNv"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/interference_icon" />

                    <com.example.behnam.fonts.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="تداخلات دارویی"
                        android:textColor="@color/sina" />
                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:id="@+id/item12"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:background="@drawable/select_recycler_view_item"-->
                    <!--android:gravity="right"-->
                    <!--android:layoutDirection="rtl"-->
                    <!--android:onClick="openNv"-->
