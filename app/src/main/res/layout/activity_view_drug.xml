<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.behnam.app.ActivityAbout">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:background="@drawable/background_gradient">

        <ImageView
            android:id="@+id/btnOpenNvDraw"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/menu_icon" />

        <com.example.behnam.fonts.FontTextView
            android:id="@+id/title_program"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="سینا دارو"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <com.example.behnam.fonts.FontTextViewBold
            android:id="@+id/name_drug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_program"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="ABACAVIR SULFATE"
            android:textColor="@color/mdtp_background_color"
            android:textSize="18dp" />

        <com.example.behnam.fonts.ButtonFont
            android:id="@+id/add"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="75dp"
            android:background="@drawable/shape_button_stroke"
            android:text="ارسال به دوستان"
            android:textColor="@color/blue2"
            android:textSize="10dp" />

        <com.example.behnam.fonts.ButtonFont
            android:id="@+id/send"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="75dp"
            android:background="@drawable/shape_button_stroke"
            android:text="افزودن به سبد دارو"
            android:textColor="@color/blue2"
            android:textSize="10dp" />

    </RelativeLayout>

    <ScrollView
