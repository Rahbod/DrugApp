                            android:layout_height="wrap_content"
                            android:layout_marginTop="-10dp"
                            android:text="داروهای گیاهی"
                            android:textColor="@color/sina"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
