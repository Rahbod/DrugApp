<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.behnam.app.ActivityActiv">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/rr"
                android:layout_width="match_parent"
                android:layout_height="307dp"
                android:background="@drawable/background_gradient">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="110dp"
                    android:layout_height="115dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:divider="@android:color/holo_blue_light"
                    app:cardCornerRadius="45dp"
                    android:transitionName="logoTrans">

                    <ImageView
                        android:layout_width="63dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:src="@drawable/heart" />

                </android.support.v7.widget.CardView>

                <com.example.behnam.fonts.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="ورود به برنامه"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/rr"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="45dp"
                android:layout_marginTop="-67dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingTop="25dp">

                    <!--editTextMobil-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:orientation="vertical">

                        <com.example.behnam.fonts.FontTextView
                            android:id="@+id/txtMobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="شماره موبایل"
                            android:textColor="@color/Gray"
                            android:textSize="12dp" />

                        <com.example.behnam.fonts.EditTextFont
                            android:id="@+id/mobilActiv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_border"
                            android:drawableLeft="@drawable/mobil_icon"
                            android:inputType="number"
                            android:paddingBottom="2dp"
                            android:paddingLeft="0dp"
                            android:paddingRight="0dp"
                            android:paddingTop="2dp"
                            android:textColor="@color/sina"
                            android:textDirection="rtl"
                            android:textSize="13dp"/>
                    </LinearLayout>

                    <!--button-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layoutDirection="rtl">

                        <com.example.behnam.fonts.ButtonFont
                            android:id="@+id/button"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:background="@drawable/shape_button_blue"
                            android:text="ثبت"
                            android:textColor="@color/white" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/card"
                android:layout_marginTop="25dp"
                android:layoutDirection="rtl"
                android:gravity="center"
                android:orientation="horizontal">

                <com.example.behnam.fonts.FontTextView
                    android:id="@+id/txtLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="برنامه را برای اولین نصب کرده اید؟آن را "
                    android:textColor="@color/Gray"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <com.example.behnam.fonts.FontTextViewBold
                    android:id="@+id/txtActiv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="فعال کنید"
                    android:textColor="@color/Gray"
                    android:textSize="12dp"/>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>