<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.behnam.app.ActivitySplashScreen">

    <LinearLayout
        android:id="@+id/linSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:src="@drawable/heart_splash" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animSplashScreen"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/img"
            android:layout_gravity="center"
            android:layout_marginTop="-85dp"
            app:lottie_autoPlay="false"
            app:lottie_fileName="Hart.json"
            app:lottie_loop="false" />

        <com.example.behnam.fonts.FontTextViewBold
            android:id="@+id/txtNameSplash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="سینا دارو"
            android:textColor="@color/sina"
            android:textSize="22dp"
            android:visibility="invisible" />

    </LinearLayout>

    <at.grabner.circleprogress.CircleProgressView
        android:id="@+id/progressBarSplash"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/linSplash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:visibility="invisible"
        CircleProgressView:cpv_spin="true"
        CircleProgressView:cpv_spinColor="@color/blue2"
        CircleProgressView:cpv_barColor="@color/blue2"
        CircleProgressView:cpv_textColor="@color/white"
        CircleProgressView:cpv_barColor1="#3866df"
        CircleProgressView:cpv_barWidth="3dp"
        CircleProgressView:cpv_innerContourSize="0dp"
        CircleProgressView:cpv_outerContourSize="0dp"
        CircleProgressView:cpv_rimWidth="3dp"
        CircleProgressView:cpv_maxValue="100"
        CircleProgressView:cpv_rimColor="#eeeeee"
        CircleProgressView:cpv_seekMode="true"
        CircleProgressView:cpv_text="555"
        CircleProgressView:cpv_textScale="100"
        CircleProgressView:cpv_textSize="17dp" />

</RelativeLayout>
